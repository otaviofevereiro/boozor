@page "/person"

<View TEntity=Person Title="Person">
    <Fields>
        <TextField TModel="Person" For="(p => p.Id)" Columns=6 readonly />
        <CheckboxField TModel="Person" For="(p=> p.Active)" Columns="6" />
        <TextField TModel=Person For="(p => p.Name)" Columns=6 />
        <TextField TModel=Person For="(p => p.Email)" Columns=6 />
        <DateField TModel="Person" TValue="DateTime?" For="(p=> p.BirthDate)" Columns="3" />
        <NumberField TModel="Person" TValue="decimal?" For="(p=> p.Value)" />
    </Fields>
    <Columns>
        <Column TModel=Person For="(p => p.Id)" />
        <Column TModel=Person For="(p => p.Name)" />
        <Column TModel="Person" For="(p=> p.BirthDate)" Format="dd/MM/yyyy" />
        <Column TModel="Person" For="(p=> p.Active)" />
        <Column TModel="Person" For="(p=> p.Email)" />
    </Columns>
</View>

