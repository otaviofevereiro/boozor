@using Microsoft.AspNetCore.Components.Forms
@inherits Field<TModel, TValue>
@typeparam TModel
@typeparam TValue


@{
    base.BuildRenderTree(__builder);
}

@code {

    [Parameter] public IReadOnlyDictionary<TValue, string> Items { get; set; }

    protected override RenderFragment ChildContent => __builder =>
    {
        <div class="col-md-@Columns col-sm-12">
            <label class="form-label">
                @Label
            </label>
            <InputSelect TValue="TValue" Value="@Value" ValueChanged="Set" ValueExpression="GetValueExpression()"
                class="form-control">

                @foreach (var item in Items)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </InputSelect>
        </div>
    };

}


