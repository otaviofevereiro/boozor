@using Microsoft.AspNetCore.Components.Forms
@using System;
@inherits Field<TModel, TValue>

@typeparam TModel
@typeparam TValue

@{
    base.BuildRenderTree(__builder);
}

@code {

    //int, long, decimal, double, Single
    protected override void OnInitialized()
    {
        ChildContent = __builder =>
        {
            <InputNumber Value="@Value" TValue="TValue" ValueChanged="Set" ValueExpression="GetValueExpression()"
                AdditionalAttributes="AdditionalAttributes" />
        };

        base.OnInitialized();
    }
}


