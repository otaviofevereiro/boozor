@using System.Linq.Expressions
@using System.Reflection;
@using Microsoft.AspNetCore.Components.Forms
@inherits Field<TModel, string>
@typeparam TModel

@{
    base.BuildRenderTree(__builder);
}

@code {

    //TODO: additionalattributes, cssclass
    protected override void OnInitialized()
    {
        ChildContent = __builder =>
        {
            <InputText Value=@base.Value ValueChanged="base.Set" class="form-control"
                ValueExpression="base.GetValueExpression<string>()" />
        };

        base.OnInitialized();
    }

}


